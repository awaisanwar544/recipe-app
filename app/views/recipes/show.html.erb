<div class="d-flex flex-column">
  <div class="d-flex flex-column align-items-center justify-content-center">
    <h1> <%= @recipe.name %> </h1>
    <p> <%= @recipe.user.name %> </p>
  </div>
  <div>

  </div>
  <div>
    <div class="d-flex flex-row align-items-center justify-content-around">
      <p>Preparation Time: <%= @recipe.preparation_time %></p>
      <p>Cooking Time: <%= @recipe.cooking_time %></p>
    </div>
    <h4>Description:</h4>
    <p><%= @recipe.description %></p>
    <div>
      <%= link_to 'Add Ingredient', new_recipe_recipe_food_path(@recipe), class: "btn btn-secondary mr-2" %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Measuring Unit</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <th scope="row"> <%= food.name %> </th>
            <td>  <%= food.measuring_unit %> </td>
            <td>  <%= food.price %> </td>
            <td>  <%= button_to 'Delete', recipe_recipe_food_path(food), class: "btn btn-danger", data: {
            confirm: "Are you sure want to delete #{food.name}?",
          }, method: :delete %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @recipe.user == current_user %>
    <div class="d-flex flex-row align-items-center">
      <%= link_to 'Back to Recipes', recipes_path, class: "btn btn-secondary mr-2" %>
      <%= button_to 'Delete', recipe_path(@recipe), class: "btn btn-danger mx-2", data: {
        confirm: "Are you sure want to delete #{@recipe.name}?",
      }, method: :delete %>
    </div>
  <% end %>
</div>